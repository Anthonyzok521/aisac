---
    import Nav from "../Nav/nav.astro";

    //Class Tailwind
    const headerClass = `
        flex 
        justify-between
        items-center
        h-16 w-full
        text-white
        px-4
        shadow-sm
        shadow-slate-700
        backdrop-blur-sm
        fixed
    `;
---

<header class={headerClass}>
    <Nav />
</header>

<style>
    header{
        font-family: 'Manrope', sans-serif;
        background-color: rgba(34, 44, 58, 0.562);
        z-index: 1;
    }
</style>